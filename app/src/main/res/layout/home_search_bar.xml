<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:id="@+id/rl_home_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/bga_home_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:badge_bgColor="@color/color_main"
            app:badge_gravity="rightTop"
            app:badge_horizontalMargin="0dp"
            app:badge_verticalMargin="0dp"
            >

            <ImageButton
                android:id="@+id/ib_home_message"
                android:layout_width="@dimen/top_navigation_icon_height"
                android:layout_height="@dimen/top_navigation_icon_height"
                android:layout_gravity="center"
                android:background="@drawable/btn_mymes"/>
        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/ib_home_service"
            android:layout_width="@dimen/top_navigation_icon_height"
            android:layout_height="@dimen/top_navigation_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_service"/>

    </RelativeLayout>


</LinearLayout>

