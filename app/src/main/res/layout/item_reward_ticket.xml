<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_ticket_left"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="47sp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_ticket_right"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="30M流量"
            android:textColor="@color/text_333333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_get"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/shape_rect_five_blue"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="福利领取"
            android:textColor="@color/color_00b7ee"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="有效期至：2017.12.23"
            android:textColor="@color/text_999999"
            android:textSize="13sp"/>

    </RelativeLayout>
</RelativeLayout>