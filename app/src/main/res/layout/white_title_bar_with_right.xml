<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/re_title_bar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_title_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/arrow_back_black"
        />

    <TextView
        android:id="@+id/tv_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="这是标题"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/title_bar_title"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:padding="5dp"
        android:text="确定"
        android:textColor="@color/assist_text"
        android:textSize="15sp"
        android:textStyle="bold"
        />

</RelativeLayout>