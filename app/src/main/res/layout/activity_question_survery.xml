<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_survery_top_bg"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:rotation="180"
                android:src="@drawable/arrow_white"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_f4f4f4"/>

        <RelativeLayout
            android:id="@+id/re_sex"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="性别"/>

            <TextView
                android:id="@+id/tv_sex"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_age"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="生日"/>

            <TextView
                android:id="@+id/tv_age"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_profession"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="职业"/>

            <TextView
                android:id="@+id/tv_profession"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/re__consume"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="意向消费（多选）"/>

            <TextView
                android:id="@+id/tv_consume"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_game"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="游戏兴趣（多选）"/>

            <TextView
                android:id="@+id/tv_game"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/re_hobby"
            style="@style/question_survery_re_style"
            android:background="@drawable/shape_only_bottom_gray_1">

            <TextView
                style="@style/question_survery_tv_style_1"
                android:text="悬赏偏好（多选）"/>

            <TextView
                android:id="@+id/tv_hobby"
                style="@style/question_survery_tv_style_2"
                android:text="请选择"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_red_butto"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:text="去抽奖"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>