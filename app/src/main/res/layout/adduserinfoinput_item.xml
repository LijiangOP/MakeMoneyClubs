<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_user_info_1"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:background="@drawable/shape_rect_zero_gray"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_add_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center"
            android:hint="描述,例如输入注册手机号"
            android:inputType="textMultiLine"
            android:maxLength="75"
            android:maxLines="3"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/text_input_hint"
            android:textSize="@dimen/official_list_title"
            />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@drawable/btn_g"/>
    </LinearLayout>
</LinearLayout>