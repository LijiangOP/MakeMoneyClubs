<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/white_title_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="请填写本人实名信息"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/list_style_1_second"/>

    <LinearLayout
        style="@style/ll_user_info_01"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/list_style_1_main"/>

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="text"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/color_8f8f8f"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/ll_user_info_01"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/list_style_1_main"/>

        <EditText
            android:id="@+id/et_identity_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/color_8f8f8f"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="请填写本人支付宝帐号，将作为唯一提现方式使用"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/list_style_1_second"/>

    <LinearLayout
        style="@style/ll_user_info_01"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝帐号"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/list_style_1_main"/>

        <EditText
            android:id="@+id/et_alipay_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="text"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/color_8f8f8f"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commite"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_login_btn"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>