<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/white_title_bar"/>

    <LinearLayout
        android:id="@+id/ll_login_psw"
        style="@style/ll_user_setting"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/official_list_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="建议您定期更改密码以保护账户安全"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/official_list_desc"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_psw_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/official_list_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_r"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_vertify"
        style="@style/ll_user_setting"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机验证"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/official_list_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="若手机号码已更换请尽快修改"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/official_list_desc"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/official_list_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_r"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_psw"
        style="@style/ll_user_setting"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付密码"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/list_style_1_main"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="用户购物消费支付等验证"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/list_style_1_second"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_psw_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_r"/>
    </LinearLayout>

</LinearLayout>