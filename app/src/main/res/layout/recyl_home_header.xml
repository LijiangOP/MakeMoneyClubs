<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5"
                android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height"
        app:canLoop="true"
        />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="171dp"
        android:background="@drawable/bg_home_indicator"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/tv_mission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_task"
            android:gravity="center"
            android:text="每日任务"
            android:textColor="@color/color_292929"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_earn_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_piggy"
            android:gravity="center"
            android:text="0元赚"
            android:textColor="@color/color_292929"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_fiction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_fiction"
            android:gravity="center"
            android:text="小说阅读"
            android:textColor="@color/color_292929"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_survey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_survey"
            android:gravity="center"
            android:text="@string/home_survey"
            android:textColor="@color/color_292929"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_game"
            android:gravity="center"
            android:text="@string/home_entertainment"
            android:textColor="@color/color_292929"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_announce"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linear_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rect_twenty_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="13dp">

        <ImageView
            android:id="@+id/iv_system_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/img_top"
            />

        <com.zhengdao.zqb.customview.MarqueeView
            android:id="@+id/marqueeView_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@color/white"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:background="@color/color_cccccc"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_system_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:text="更多"
            android:textColor="@color/color_cccccc"
            android:textSize="11sp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
