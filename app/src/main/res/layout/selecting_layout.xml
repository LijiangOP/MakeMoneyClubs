<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_heard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/re_title_bar"
    android:background="@drawable/shape_only_bottom_gray"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/re_synthesize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/redpacket_rebate_selected_text_style"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/little_arror_normal_down"
            android:text="综合"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_hot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_hot"
            style="@style/redpacket_rebate_selected_text_style"
            android:text="人气"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_hot"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hot_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/little_arror_normal_up"
                />

            <ImageView
                android:id="@+id/iv_hot_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/little_arror_normal_down"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_award"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_award"
            style="@style/redpacket_rebate_selected_text_style"
            android:text="奖励"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_award"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_reward_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/little_arror_normal_up"
                />

            <ImageView
                android:id="@+id/iv_reward_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/little_arror_normal_down"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_select"
            style="@style/redpacket_rebate_selected_text_style"
            android:drawableRight="@drawable/btn_filtrate"
            android:text="筛选"/>

    </RelativeLayout>

</LinearLayout>
