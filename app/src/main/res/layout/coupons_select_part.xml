<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_only_bottom_gray"
    android:orientation="horizontal"
    app:layout_scrollFlags="exitUntilCollapsed">

    <com.zhengdao.zqb.customview.DropdownButton
        android:id="@+id/db_synthesize"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:id="@+id/re_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_hot"
            style="@style/redpacket_rebate_selected_text_style"
            android:text="价格"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_hot"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hot_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/little_arror_normal_up"
                />

            <ImageView
                android:id="@+id/iv_hot_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/little_arror_normal_down"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_award"
            style="@style/redpacket_rebate_selected_text_style"
            android:text="销量"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_award"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_reward_arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/little_arror_normal_up"
                />

            <ImageView
                android:id="@+id/iv_reward_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/little_arror_normal_down"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>