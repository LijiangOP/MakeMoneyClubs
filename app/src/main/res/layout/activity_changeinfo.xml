<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/white_title_bar_with_right"/>

    <LinearLayout
        style="@style/ll_user_info"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="text"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/text_333333"
            android:textColorHint="@color/color_8f8f8f"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/official_list_title"/>

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_g"/>
    </LinearLayout>
</LinearLayout>