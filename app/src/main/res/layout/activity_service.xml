<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="12dp"
                        android:drawableTop="@drawable/custom_wx"
                        android:text="微信咨询"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/official_list_desc"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_f0f0f0"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="12dp"
                        android:drawableTop="@drawable/custom_qq"
                        android:text="QQ咨询"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/official_list_desc"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_f0f0f0"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="12dp"
                        android:drawableTop="@drawable/custom_business"
                        android:text="商务合作"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/official_list_desc"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:text="时间：9:00-18:00"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/official_list_desc"/>

            <TextView
                android:id="@+id/tv_guess_you_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f5f5"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="猜你想问"
                android:textColor="@color/text_999999"
                android:textSize="13sp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5f5f5">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_only_top_white_solid_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="问题分类"
                android:textColor="@color/text_999999"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/custom_pading_style_1"
                        android:drawableTop="@drawable/zh"
                        android:text="帐号相关"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_f0f0f0"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/custom_pading_style_1"
                        android:drawableTop="@drawable/yh"
                        android:text="用户相关"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_f0f0f0"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_rewardOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/custom_pading_style_1"
                        android:drawableTop="@drawable/xhh"
                        android:text="悬赏主相关"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/color_f5f5f5"/>

            <TextView
                android:id="@+id/tv_advice_freedBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/yjf"
                android:drawablePadding="12dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="意见反馈"
                android:textColor="@color/color_00b7ee"
                android:textSize="15sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>