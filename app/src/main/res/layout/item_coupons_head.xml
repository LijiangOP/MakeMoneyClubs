<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/re_item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_top_bg"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="@drawable/coupons_top_bg"/>

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="348dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ticket_headsearch_margin_top"
            android:background="@drawable/ticket_head_et_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:src="@drawable/taobao_fragment_search"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="输入商品名或粘贴淘宝标题"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/color_8f8f8f"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/official_list_title"/>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ticket_middle_search_bg"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/search_bar"
            android:layout_marginTop="5dp"
            android:background="@drawable/coupons_middle_bg"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</LinearLayout>