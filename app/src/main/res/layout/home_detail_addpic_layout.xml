<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_add_pic_bg"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_screenshot_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_screenshot_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/add_pic_bg"
                />

            <TextView
                android:id="@+id/tv_pic_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="@color/color_4faffc"
                android:textSize="9sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_screenshot"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/shape_add_pic_bg"
            android:padding="5dp"
            android:scaleType="center"
            />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:rotation="180"
            android:src="@drawable/btn_to"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>