<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar_with_right"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <EditText
                android:id="@id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:gravity="top"
                android:hint="简明扼要通俗易懂"
                android:inputType="textMultiLine"
                android:minHeight="80dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_input_hint"
                android:textSize="13sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp">


                <ImageView
                    android:id="@+id/iv_add_pic_flow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/btn_photo"
                    />

                <TextView
                    android:id="@+id/tv_content_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="50"
                    android:textColor="@color/text_input_hint"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
