<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_more_three_point"/>

    <com.kennyc.view.MultiStateView
        android:id="@+id/multiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/color_f5f5f5"
        app:msv_emptyView="@layout/layout_empty"
        app:msv_errorView="@layout/layout_error"
        app:msv_loadingView="@layout/layout_loading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_nianhualv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="预期年化收益"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/official_list_desc"/>

                    <TextView
                        android:id="@+id/tv_total_income_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="170dp"
                        android:text="总收益"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/official_list_desc"/>

                    <TextView
                        android:id="@+id/tv_nianhualv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:paddingLeft="15dp"
                        android:text="29.00%"
                        android:textColor="@color/main"
                        android:textSize="29sp"/>

                    <TextView
                        android:id="@+id/tv_total_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="18dp"
                        android:text="508元"
                        android:textColor="@color/main"
                        android:textSize="29sp"/>

                    <com.fynn.fluidlayout.FluidLayout
                        android:id="@+id/fluid_layout_keyWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nianhualv"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp">
                    </com.fynn.fluidlayout.FluidLayout>

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/fluid_layout_keyWord"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_f5f5f5"/>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_1"
                        android:drawableLeft="@drawable/licai_cpqx"
                        android:drawablePadding="2dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:text="产品期限2个月,金额1000元"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_desc"/>

                    <TextView
                        android:id="@+id/tv_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_desc"
                        android:layout_marginTop="7dp"
                        android:drawableLeft="@drawable/licai_fll"
                        android:drawablePadding="2dp"
                        android:paddingLeft="15dp"
                        android:text="返利300元"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_desc"/>

                    <TextView
                        android:id="@+id/tv_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_desc"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_rebate"
                        android:drawableLeft="@drawable/licai_lx"
                        android:drawablePadding="2dp"
                        android:paddingLeft="15dp"
                        android:text="返利300元"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_desc"/>

                    <TextView
                        android:id="@+id/tv_red_packet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_desc"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_interest"
                        android:drawableLeft="@drawable/licai_hb"
                        android:drawablePadding="2dp"
                        android:paddingLeft="15dp"
                        android:text=" 红包80元"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_desc"/>

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@+id/tv_rebate"
                        android:layout_marginTop="12dp"
                        android:background="@color/color_f5f5f5"/>

                    <TextView
                        android:id="@+id/tv_platform_desc_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_2"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="15dp"
                        android:text="平台简介"
                        android:textColor="@color/color_fd5a5e"
                        android:textSize="@dimen/official_list_title"/>

                    <TextView
                        android:id="@+id/tv_platform_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_platform_desc_tag"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:lineSpacingExtra="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_title"/>

                    <View
                        android:id="@+id/view_3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@+id/tv_platform_desc"
                        android:background="@color/color_f5f5f5"/>

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_3"
                        android:background="@drawable/shape_home_tab_bg"
                        app:tabGravity="center"
                        app:tabIndicatorColor="@color/main"
                        app:tabMode="scrollable"
                        app:tabPaddingEnd="-1dp"
                        app:tabPaddingStart="-1dp"
                        app:tabSelectedTextColor="@color/color_fd5a5e"
                        app:tabTextAppearance="@style/tab_select_style_earn"
                        app:tabTextColor="@color/color_999999">

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动说明"/>

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特别提醒"/>

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风险提示"/>

                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="免责声明"/>
                    </android.support.design.widget.TabLayout>

                    <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tabLayout"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:lineSpacingExtra="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/official_list_title"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@+id/tv_detail"
                        android:background="@color/color_f5f5f5"/>
                </RelativeLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/re_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_red_button"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="立即参与"
                    android:textColor="@color/white"
                    android:textSize="@dimen/official_reb_bottom"/>

                <ImageView
                    android:id="@+id/iv_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/product_calculate"/>

            </LinearLayout>
        </LinearLayout>
    </com.kennyc.view.MultiStateView>
</LinearLayout>
