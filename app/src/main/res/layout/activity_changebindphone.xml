<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/white_title_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="您正在修改绑定手机，请进行身份验证"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/list_style_1_second"/>

    <LinearLayout
        android:id="@+id/ll_can_get_code"
        style="@style/ll_user_setting"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="原手机号能收到验证码"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/list_style_1_main"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_r"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_can_not_get_code"
        style="@style/ll_user_setting"
        android:background="@drawable/shape_only_bottom_gray_tiny">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="原手机号不能收到验证码"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/list_style_1_main"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_r"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/list_style_1_second"/>

</LinearLayout>